<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lithium Bot Admin | @ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --color-lithium-0: #050505;
            --card-bg: rgba(17, 17, 17, 0.85);
            --border-color: rgba(255, 255, 255, 0.1);
        }

        body {
            background-color: var(--color-lithium-0);
            color: #e0e0e0;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            margin: 0;
            overflow-x: hidden;
        }

        /* O FUNDO RADIAL ENVIADO */
        .hero-bg {
            background-color: var(--color-lithium-0);
            background-image: radial-gradient(at 27% 37%, hsla(215, 98%, 42%, 0.1) 0px, transparent 50%), radial-gradient(at 97% 21%, hsla(135, 98%, 42%, 0.1) 0px, transparent 50%), radial-gradient(at 52% 99%, hsla(355, 98%, 42%, 0.1) 0px, transparent 50%), radial-gradient(at 10% 29%, hsla(256, 96%, 41%, 0.1) 0px, transparent 50%), radial-gradient(at 97% 96%, hsla(38, 60%, 74%, 0.1) 0px, transparent 50%), radial-gradient(at 33% 50%, hsla(222, 67%, 73%, 0.1) 0px, transparent 50%), radial-gradient(at 79% 53%, hsla(343, 68%, 79%, 0.1) 0px, transparent 50%);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1;
            opacity: .6; /* Ajustado para visibilidade */
        }

        /* EFEITO GLASSMOPHISM */
        .glass-card {
            background: var(--card-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            transition: transform 0.3s ease, border-color 0.3s ease;
        }

            .glass-card:hover {
                border-color: rgba(255, 255, 255, 0.2);
                transform: translateY(-5px);
            }

        .btn-primary {
            background-color: #ffffff;
            border: none;
            color: #000;
            padding: 10px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #d1d1d1;
                color: #000;
                box-shadow: 0 0 15px rgba(255,255,255,0.2);
            }

        .navbar {
            background: rgba(10, 10, 10, 0.7);
            backdrop-filter: blur(5px);
        }

        .logo-anim {
            filter: drop-shadow(0 0 8px rgba(255,255,255,0.3));
        }

        input.form-control {
            background-color: rgba(0,0,0,0.3) !important;
            border: 1px solid var(--border-color);
            color: white !important;
        }

            input.form-control:focus {
                box-shadow: none;
                border-color: #555;
            }
    </style>
</head>
<body>

    <div class="hero-bg"></div>

    <section id="login-section" class="vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="glass-card p-5 text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024" width="70" height="70" class="mb-3 logo-anim">
                            <path fill="#fff" d="m548.2 349.6c-118.4 98.1-215.1 178.6-215 178.8 0.2 0.3 28.2-3.7 62.3-8.9 34.1-5.1 62.1-9.1 62.2-8.9 0.2 0.2-44.8 76.1-99.8 168.6-55.1 92.6-100.7 168.9-101.3 169.7-0.8 1.1-0.8 1.3 0.1 1 0.6-0.2 96.2-84.9 212.2-188.2 116.1-103.2 211.1-188 211.1-188.5 0-0.4-25.6 3.4-56.8 8.5-31.2 5-57.7 9.3-58.9 9.5-1.3 0.2-2.3 0.2-2.3 0 0-0.1 45.7-72 101.5-159.7 55.8-87.7 101.1-159.7 100.7-159.9-0.5-0.2-97.7 79.9-216 178z" />
                        </svg>

                        <h2 class="fw-bold text-white mb-1">Lithium</h2>
                        <p class="text-light small opacity-75">Access the Administrator panel</p>

                        <div class="mb-4 text-start">
                            <label class="form-label text-light small opacity-75">Access Token</label>
                            <input type="password" class="form-control" id="botToken" placeholder="••••••••••••">
                        </div>

                        <button class="btn btn-primary w-100 fw-bold" onclick="login()">Login to the System</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @RenderBody()

    <section id="dashboard-section" class="d-none">
        <nav class="navbar navbar-expand-lg navbar-dark border-bottom border-secondary">
            <div class="container">
                <a class="navbar-brand fw-bold" href="#">
                    <span class="text-white">LITHIUM</span> <small class="text-muted fw-normal ms-2" style="font-size: 12px;">Admin Panel</small>
                </a>
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3 small d-none d-sm-block">Status: <span class="text-success">Online</span></span>
                    <button class="btn btn-sm btn-outline-danger px-3" onclick="logout()">Sair</button>
                </div>
            </div>
        </nav>

        <div class="container mt-5">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="glass-card p-4 h-100">
                        <i class="bi bi-cpu text-white fs-3"></i>
                        <h5 class="mt-3 text-white">Performance</h5>
                        <p class="text-muted small mb-0">Uso de CPU: 12% | RAM: 256MB</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="glass-card p-4 h-100">
                        <i class="bi bi-people text-white fs-3"></i>
                        <h5 class="mt-3 text-white">Usuários</h5>
                        <p class="text-muted small mb-0">Total de 1,240 membros ativos.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="glass-card p-4 h-100">
                        <i class="bi bi-terminal text-white fs-3"></i>
                        <h5 class="mt-3 text-white">Logs do Bot</h5>
                        <p class="text-muted small mb-0">Último comando: !help (há 2 min)</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>

    <script>
        // Animação inicial
        window.onload = () => {
            anime({
                targets: '#login-section .glass-card',
                translateY: [40, 0],
                opacity: [0, 1],
                duration: 1200,
                easing: 'easeOutExpo'
            });
        };

        function login() {
            // Animação de saída
            anime({
                targets: '#login-section',
                opacity: 0,
                translateY: -20,
                duration: 500,
                easing: 'easeInOutQuad',
                complete: function() {
                    document.getElementById('login-section').classList.add('d-none');
                    showDashboard();
                }
            });
        }

        function showDashboard() {
            const dash = document.getElementById('dashboard-section');
            dash.classList.remove('d-none');

            anime({
                targets: '#dashboard-section .glass-card',
                scale: [0.95, 1],
                opacity: [0, 1],
                delay: anime.stagger(150),
                duration: 1000,
                easing: 'easeOutElastic(1, .8)'
            });
        }

        function logout() {
            location.reload();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>